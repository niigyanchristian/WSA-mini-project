            <div class="trending-title">Trending ads</div>
            <div class="categories">
                <p>Choose category</p>
                <div class="filters">
                    <label for="select-cat">Filter by Category</label>
                    <select name="category" id="select-cat" class="form-control">
                        <option value="all">All Categories</option>
                        <% categories.forEach((item) => { %>
                            <option value="<%= item.id %>"><%= item.name %></option>
                        <% }) %>
                    </select>
                    
                    <label for="select-region">Filter by Region</label>
                    <select name="region" id="select-region" class="form-control">
                        <option value="all">All Regions</option>
                        
                        <% regions.forEach((region) => { %>
                            <option value="<%= region.id %>"><%= region.name %></option>
                        <% }) %>
                    </select>
            
                    <label for="select-price">Filter by Price Range</label>
                    <select name="price" id="select-price" class="form-control">
                        <option value="all">All Prices</option>
                        <option value="0-100">0 - 100</option>
                        <option value="101-500">101 - 500</option>
                        <option value="501-1000">501 - 1000</option>
                        <option value="1001-5000">1001 - 5000</option>
                        <option value="5001-10000">5001 - 10000</option>
                        <option value="10001-20000">10001 - 20000</option>
                    </select>
                    <br>
            
                    <button id="apply-filters" class="btn">Apply Filters</button>
                </div>
            </div>
            <div class="body_container" id="classifieds-container">
                <%classifieds.forEach((item)=>{%>
                    <a href="/products/<%=item.id%>" class="item" data-category="<%= item.category_id %>" data-region="<%= item.region_id %>" data-price="<%= item.price %>">
                        <div class="image">
                                <img src="/images/<%=item.image_path%>" alt="">
                                <div class="tag">
